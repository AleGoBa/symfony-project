{% extends 'base.html.twig' %}

{% block body %}
    <main class="mx-auto w-50 text-center mt-5">
        <div class="card mb-4">
            <div class="card-header">
                Añadir un comentario
            </div>
           <div class="card-body p-3">
               {{ form(form) }}
           </div>
        </div>
        <div class="card">
            <div class="card-header">
                Lista de comentarios
            </div>
            <div class="card-body p-3 row justify-content-between" style="height: 375px; overflow: auto">
                {% for comment in comments %}
                    <div class="col-4 p-3">
                        <div class="card w-100" style="width: 18rem;">
                            <div class="card-body">
                                <h5 class="card-title font-weight-bold">Comentario número {{ comment.id }}</h5>
                                <p class="card-text">{{ comment.body }}</p>
                                <a class="btn btn-primary">Ver más...</a>
                            </div>
                        </div>
                    </div>

                {% endfor %}
            </div>
        </div>
    </main>

{% endblock %}